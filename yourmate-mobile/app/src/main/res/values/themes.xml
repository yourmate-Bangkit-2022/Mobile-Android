<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.YourMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--    Text System Material Design    -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.YourMate.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.YourMate.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.YourMate.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.YourMate.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.YourMate.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.YourMate.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.YourMate.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.YourMate.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.YourMate.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.YourMate.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.YourMate.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.YourMate.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.YourMate.Overline</item>
        <!--    Widget Style    -->
        <item name="android:textViewStyle">@style/Widget.YourMate.TextView</item>
    </style>

    <style name="Theme.YourMate" parent="Base.Theme.YourMate">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.YourMate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YourMate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YourMate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>